{
  "name": "postvel",
  "version": "3.0.0",
  "description": "Maths, physics and chemistry constants",
  "author": "David Kistauri",
  "main": "index.html",
  "stylelint": {
    "plugins": [
      "stylelint-order"
    ],
    "extends": [
      "stylelint-config-rational-order"
    ],
    "rules": {
      "plugin/rational-order": [
        true,
        {
          "empty-line-between-groups": true
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "define-mixin",
            "mixin"
          ]
        }
      ],
      "color-named": "never",
      "order/order": [
        "declarations",
        {
          "type": "at-rule",
          "name": "media"
        },
        {
          "type": "rule",
          "selector": "^&::(before|after)"
        },
        {
          "type": "rule",
          "selector": "^&:\\w"
        },
        {
          "type": "rule",
          "selector": "^&_"
        },
        {
          "type": "rule",
          "selector": "^."
        }
      ]
    }
  },
  "scripts": {
    "develop": "parcel src/index.pug --open",
    "build": "parcel build src/index.pug -d build",
    "check": "stylelint \"src/*/*.sss\" --fix",
    "deploy": "npm run check && npm run build && cd build && now --prod"
  },
  "keywords": [
    "maths",
    "physics",
    "chemistry",
    "constants",
    "science",
    "parcel",
    "pug"
  ],
  "devDependencies": {
    "cssnano": "^4.1.10",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-static-files-copy": "^2.3.1",
    "postcss-mixins": "^6.2.3",
    "precss": "^4.0.0",
    "pug": "^2.0.4",
    "stylelint": "^13.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^4.0.0"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/dtroode/postvel"
  },
  "license": "ISC"
}
